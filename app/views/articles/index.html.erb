<!-- Barra de Navegação -->
<nav class="w-full bg-indigo-600 fixed top-0 left-0 z-70">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between h-24">
    <!-- Nome da Aplicação -->
    <div class="flex-shrink-0">
      <%= link_to 'Redator Dev', home_index_path, class: "text-white text-2xl font-bold" %>
    </div>
    <!-- Links de Navegação -->
    <div class="flex items-center">
      <%= link_to 'New Article', new_article_path, class: "text-white text-sm font-medium hover:text-gray-300 mr-4" %>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-white text-sm font-medium hover:text-gray-300" %>
    </div>
  </div>
</nav>

<!-- Conteúdo da Página -->
<div class="flex flex-col items-center min-h-screen py-24 px-4 bg-gray-100 mt-16">
  <!-- Mensagem de Notificação -->
  <% if notice %>
    <p class="text-green-600 bg-green-100 border border-green-200 rounded-lg p-4 mb-4">
      <%= notice %>
    </p>
  <% end %>

  <div class="w-full max-w-4xl text-center">

    <div id="articles" class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-1  w-11/12 place-items-center mx-auto">
      <% @articles.each do |article| %>
        <div class="bg-white overflow-hidden shadow rounded-lg p-6 w-full mx-auto">
          <%= link_to article_path(article) do %>
            <div id="<%= dom_id article %>" class="text-center">
              <div class="flex items-center justify-center">
                <h2 class="text-xl font-semibold text-gray-800">
                  <%= article.title %>
                </h2>
              </div>

              <p class="text-gray-500 mt-2">
                <%= article.created_at.strftime("%B %d, %Y") %> | <%= article.tag&.name %>
              </p>
            </div> 
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
