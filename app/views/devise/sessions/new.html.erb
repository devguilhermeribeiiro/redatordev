<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <div class="field mb-4">
        <%= f.label :email, class: "block text-gray-700 font-medium" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
      </div>

      <div class="field mb-4">
        <%= f.label :password, class: "block text-gray-700 font-medium" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field flex items-center mb-4">
          <%= f.check_box :remember_me, class: "form-checkbox" %>
          <%= f.label :remember_me, class: "ml-2 text-gray-700" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 w-full" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
