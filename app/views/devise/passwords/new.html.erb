<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-4">
        <%= f.label :email, class: "block text-gray-700 font-medium" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 w-full" %>
      </div>
    <% end %>

    <div class="mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

